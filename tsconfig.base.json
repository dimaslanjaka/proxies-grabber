{
  //"extends": "../../../hexo-seo/packages/js-prototypes/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".", // This must be specified if "paths" is.
    "allowJs": true,
    "allowUnusedLabels": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "ES2015", "DOM"
    ],
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "skipLibCheck": true,
    "importHelpers": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/.git/**",
    "./dist/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
