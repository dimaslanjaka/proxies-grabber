{
  "terminal.integrated.env.linux": {
    // linux custom PATH environment variable
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${workspaceFolder}/bin"
  },
  "terminal.integrated.env.windows": {
    // windows custom PATH environment variable
    "PATH": "${env:PATH};${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\bin"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "javascript.suggestionActions.enabled": false,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/dist/**": false,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "emmet.includeLanguages": {
    "ejs": "html"
  },
  "files.associations": {
    "*.ejs": "html"
  },
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "node --no-warnings --loader ts-node/esm"
  },
  "code-runner.executorMapByGlob": {
    // code runner executor map by glob
    "*.test.{ts,cjs,js,mjs}": "yarn test -- $fileNameWithoutExt"
  },
  "eslint.useFlatConfig": true
}
